<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000"
            android:text="Trình Nghe Nhạc"
            android:textColor="#fff"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:paddingStart="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Nghe Nhạc"
            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvIndex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bài 1"
                android:textSize="30dp"
                android:gravity="center_horizontal"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvTenbai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Tên Bài 1"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingRight="30dp"
                android:text="4 min 31 sec"
                android:textSize="20dp"
                android:gravity="right"
                android:textColor="#000"/>

        </LinearLayout>
        
        <LinearLayout
            android:paddingTop="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
           
        <TextView
            android:id="@+id/tvChonBai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn Bài"
            android:textSize="30sp"
            android:background="#ccc"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="#000"/>
         <TextView
             android:onClick="musicplay"
             android:id="@+id/tvPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:textSize="30sp"
                android:background="#ccc"
                android:padding="10dp"
                 android:layout_margin="5dp"
                 android:textColor="#000" />
         <TextView
             android:onClick="musicpause"
             android:id="@+id/tvPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause"
                android:textSize="30sp"
                android:background="#ccc"
                android:padding="10dp"
             android:layout_margin="5dp"
             android:textColor="#000"/>
            
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:paddingTop="30dp"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>